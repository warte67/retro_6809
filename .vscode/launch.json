{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (g++)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main", // Path to the executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb", // Adjust if necessary
            "preLaunchTask": "build",  // Ensure this is linked to the build task
            "sourceFileMap": {
                "/src": "${workspaceFolder}/src"
            }
        }
    ]
}
