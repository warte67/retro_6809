{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with GDB",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/main",  // Adjust this to your executable name
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",  // Adjust this to your gdb path
      "preLaunchTask": "Build with Makefile",  // Make sure this matches the task label in tasks.json
      "logging": {
        "programOutput": true,
        "exceptions": true
      }
    }
  ]
}
